@model List<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
    var userRoles = ViewBag.UserRoles as Dictionary<string, string>;
}

<h2>Kullanıcı Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Yetki</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @if (userRoles.ContainsKey(user.Id))
                    {
                        <span class="badge @(userRoles[user.Id] == "Admin" ? "bg-success" : "bg-secondary")">
                            @userRoles[user.Id]
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">User</span>
                    }
                </td>
                <td>
                    @if (userRoles[user.Id] != "Admin")
                    {
                        <form asp-controller="Admin" asp-action="AssignAdminRole" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-primary">Admin Yap</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
